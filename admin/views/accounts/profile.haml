.block
  .secondary-navigation
    %ul.wat-cf
      - if(current_account.administrator?)
        %li.first=link_to pat(:list), url(:accounts, :index)
        %li=link_to pat(:new), url(:accounts, :new)
        %li.active=link_to pat(:edit), url(:accounts, :edit, :id => @account.id)
  .content
    %h2.title
      Your profile
    .inner
      -form_for :account, url(:accounts, :update_profile), :method => :put, :class => :form do |f|
        =partial "accounts/form", :locals => { :f => f, :account => @account }

-content_for :sidebar, partial("base/sidebar")